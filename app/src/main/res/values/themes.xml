<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="colorSurface">@color/azureish_white</item>
    </style>

    <style name="Theme.TkBottomNavigation" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#00BCD4</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Theme.TkActionBar" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">#00BCD4</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.HideShadowActionbar" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.SettingsActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/space_cadet</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_azureich_white_radius_15</item>
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColorHint">@color/steel_blue</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>