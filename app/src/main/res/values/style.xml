<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--            <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--            <item name="colorAccent">@color/colorAccent</item>-->
        <!--            <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="actionModeBackground">@color/design_default_color_primary</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_radius_top_25</item>
    </style>

    <style name="editTextInTranslateTextActivity" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">top|start</item>
        <item name="android:lines">8</item>
        <item name="maxLines">10</item>
        <item name="android:minLines">6</item>
        <item name="android:padding">5dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/radio_button_color</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/space_cadet</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_bg</item>
    </style>

    <style name="toggleButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@drawable/toggle_text_color</item>
    </style>

    <style name="mainButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@drawable/bg_round_corner_5</item>
        <item name="android:backgroundTint">@color/cultured</item>
<!--        <item name="android:background">@color/cultured</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
</resources>